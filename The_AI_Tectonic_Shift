    <script>
        // Chart.js configuration constants
        const CHART_FONT = {
            family: "'Inter', sans-serif",
            size: 12
        };
        const CHART_TEXT_COLOR = '#c9d1d9';
        const CHART_GRID_COLOR = 'rgba(201, 209, 217, 0.1)';

        // Common tooltip plugin configuration
        const TOOLTIP_PLUGIN = {
            tooltip: {
                backgroundColor: '#161b22',
                titleColor: CHART_TEXT_COLOR,
                bodyColor: CHART_TEXT_COLOR,
                borderColor: '#30363d',
                borderWidth: 1,
                callbacks: {
                    title: function(tooltipItems) {
                        const item = tooltipItems[0];
                        let label = item.chart.data.labels[item.dataIndex];
                        if (Array.isArray(label)) {
                            return label.join(' ');
                        } else {
                            return label;
                        }
                    }
                }
            }
        };
        
        // Function to wrap long labels for Chart.js
        function wrapLabels(label, maxWidth = 16) {
            const words = label.split(' ');
            let lines = [];
            let currentLine = '';
            words.forEach(word => {
                if ((currentLine + word).length > maxWidth && currentLine.length > 0) {
                    lines.push(currentLine.trim());
                    currentLine = word + ' ';
                } else {
                    currentLine += word + ' ';
                }
            });
            lines.push(currentLine.trim());
            return lines.filter(line => line.length > 0);
        }

        // Cost Comparison Chart
        const costChartCtx = document.getElementById('costChart').getContext('2d');
        new Chart(costChartCtx, {
            type: 'bar',
            data: {
                labels: [wrapLabels('Proprietary Model Cost'), wrapLabels('Open-Source Model Cost')],
                datasets: [{
                    label: 'Relative Deployment Cost',
                    data: [100, 20],
                    backgroundColor: ['#7A5195', '#58a6ff'], // Deep Purple and Vibrant Blue
                    borderColor: ['#7A5195', '#58a6ff'],
                    borderWidth: 1
                }]
            },
            options: {
                indexAxis: 'y',
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { 
                        display: false
                    },
                    title: {
                        display: true,
                        text: 'Estimated Cost Reduction up to 80%',
                        font: { size: 16, family: CHART_FONT.family },
                        color: CHART_TEXT_COLOR
                    },
                    ...TOOLTIP_PLUGIN
                },
                scales: {
                    x: {
                        beginAtZero: true,
                        ticks: {
                            callback: function(value) {
                                return value + '%'
                            },
                            color: CHART_TEXT_COLOR,
                            font: CHART_FONT
                        },
                        grid: {
                            color: CHART_GRID_COLOR
                        }
                    },
                    y: {
                        ticks: {
                            color: CHART_TEXT_COLOR,
                            font: CHART_FONT
                        },
                        grid: {
                            color: CHART_GRID_COLOR
                        }
                    }
                }
            }
        });

        // China's Self-Sufficiency Goal Chart
        const selfSufficiencyChartCtx = document.getElementById('selfSufficiencyChart').getContext('2d');
        new Chart(selfSufficiencyChartCtx, {
            type: 'doughnut',
            data: {
                labels: ['Target Reached', 'Remaining'],
                datasets: [{
                    data: [90, 10],
                    backgroundColor: ['#58a6ff', '#30363d'], // Vibrant Blue and Medium Dark Grey
                    borderColor: '#0d1117', // Background color for border
                    borderWidth: 4
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { 
                        position: 'bottom',
                        labels: {
                            color: CHART_TEXT_COLOR,
                            font: CHART_FONT
                        }
                    },
                    title: {
                        display: true,
                        text: 'China\'s 90% Compute Self-Sufficiency Goal (within 5 years)',
                        font: { size: 16, family: CHART_FONT.family },
                        color: CHART_TEXT_COLOR
                    },
                    ...TOOLTIP_PLUGIN
                },
                cutout: '70%'
            }
        });
        
        // Enterprise Adoption Chart
        const adoptionChartCtx = document.getElementById('adoptionChart').getContext('2d');
        new Chart(adoptionChartCtx, {
            type: 'doughnut',
            data: {
                labels: ['Enterprises Adopting Open Models', 'Remaining'],
                datasets: [{
                    data: [85, 15],
                    backgroundColor: ['#58a6ff', '#30363d'], // Vibrant Blue and Medium Dark Grey
                    borderColor: '#0d1117', // Background color for border
                    borderWidth: 4
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { 
                        position: 'bottom',
                        labels: {
                            color: CHART_TEXT_COLOR,
                            font: CHART_FONT
                        }
                    },
                    title: {
                        display: true,
                        text: '85% Enterprise Adoption by End of Next Year',
                        font: { size: 16, family: CHART_FONT.family },
                        color: CHART_TEXT_COLOR
                    },
                    ...TOOLTIP_PLUGIN
                },
                cutout: '70%'
            }
        });

        // Price Trend Chart
        const priceTrendChartCtx = document.getElementById('priceTrendChart').getContext('2d');
        new Chart(priceTrendChartCtx, {
            type: 'line',
            data: {
                labels: ['Last Year', 'Mid Year', 'This Year'],
                datasets: [{
                    label: 'Relative Cost to Run Large Models',
                    data: [100, 60, 20],
                    fill: true,
                    backgroundColor: 'rgba(88, 166, 255, 0.2)', // Semi-transparent vibrant blue
                    borderColor: '#58a6ff', // Vibrant blue
                    tension: 0.3 // Smooth line
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { 
                        display: false
                    },
                    title: {
                        display: false // No title for this chart, text above provides context
                    },
                    ...TOOLTIP_PLUGIN
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            callback: function(value) {
                                return value + '%'
                            },
                            color: CHART_TEXT_COLOR,
                            font: CHART_FONT
                        },
                        grid: {
                            color: CHART_GRID_COLOR
                        }
                    },
                    x: {
                        ticks: {
                            color: CHART_TEXT_COLOR,
                            font: CHART_FONT
                        },
                        grid: {
                            color: CHART_GRID_COLOR
                        }
                    }
                }
            }
        });

    </script>
